{
  "name": "contentops-ai-backend",
  "version": "1.0.0",
  "description": "Backend API for ContentOps AI - Multi-platform content management system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
