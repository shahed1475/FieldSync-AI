# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# JWT
JWT_SECRET=replace-with-secure-secret
JWT_REFRESH_SECRET=replace-with-secure-refresh-secret
JWT_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=replace-with-32-byte-hex-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/contentops

# OAuth placeholders (for channel integrations)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# SSE/WebSocket
SSE_PATH=/api/events/subscribe