# FieldSync AI Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Application Name and Version
APP_NAME=FieldSync AI
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fieldsync_ai
DB_USER=fieldsync
DB_PASSWORD=your_secure_database_password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Database SSL (set to true for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_256_bits_long_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# =============================================================================
# RATE LIMITING
# =============================================================================

# General API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Query Rate Limiting
QUERY_RATE_LIMIT_WINDOW_MS=60000
QUERY_RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Configuration
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d
LOG_FILE_DATE_PATTERN=YYYY-MM-DD

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5
UPLOAD_PATH=./uploads

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=csv,xlsx,xls,json

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Templates
FROM_EMAIL=noreply@fieldsync.ai
FROM_NAME=FieldSync AI

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Google Sheets Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback

# Shopify Integration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# Stripe Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# =============================================================================
# AI & ANALYTICS CONFIGURATION
# =============================================================================

# OpenAI Configuration (if using)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Analytics Configuration
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
SSL_CA_PATH=./ssl/ca.pem

# Force HTTPS Redirect
FORCE_HTTPS=false

# =============================================================================
# CLOUD STORAGE (Production)
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fieldsync-ai-uploads

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Connection Pool Configuration
CONNECTION_POOL_MIN=2
CONNECTION_POOL_MAX=20

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false
ALLOW_ANON=false
DEMO_ORG_ID=00000000-0000-0000-0000-000000000000

# Hot Reloading
WATCH_FILES=true
IGNORE_PATTERNS=node_modules,logs,uploads

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production Security
TRUST_PROXY=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Production Performance
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=31536000

# Production Monitoring
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
